}

<h2>组织管理</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Parent Name
                @*@Html.DisplayNameFor(model => model.Parent.Name)*@
